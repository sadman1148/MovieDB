<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navcomponent"
    app:startDestination="@id/movieFragment">

    <fragment
        android:id="@+id/movieFragment"
        android:name="com.techetronventures.moviedb.ui.fragment.MovieFragment"
        android:label="Trending Movies"
        tools:layout="@layout/fragment_movie">
        <action
            android:id="@+id/action_movieFragment_to_detailFragment"
            app:destination="@id/detailFragment" />
    </fragment>
    <fragment
        android:id="@+id/showFragment"
        android:name="com.techetronventures.moviedb.ui.fragment.ShowFragment"
        android:label="Trending Shows"
        tools:layout="@layout/fragment_show">
        <action
            android:id="@+id/action_showFragment_to_detailFragment"
            app:destination="@id/detailFragment" />
    </fragment>
    <fragment
        android:id="@+id/detailFragment"
        android:name="com.techetronventures.moviedb.ui.fragment.DetailFragment"
        android:label="Details"
        tools:layout="@layout/fragment_detail" />
</navigation>